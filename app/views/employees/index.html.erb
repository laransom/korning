<!DOCTYPE html>
<head>
</head>

<body>

  <h1>Employees</h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><a href="mailto:<%= employee.email %>"><%= employee.email %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>
