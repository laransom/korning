<!DOCTYPE html>
<head>
</head>

<body>

  <h1>Customers</h1>

  <table>
    <thead>
      <tr>
        <th>Customer Name</th>
        <th>Account Number</th>
        <th>Website</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.account_no %></td>
        <td><a href="<%= customer.url %>"><%= customer.url %></a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</body>
